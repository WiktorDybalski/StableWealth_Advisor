/* Button Styles */
QPushButton {
    background-color: #3498db;
    color: #ffffff;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    margin: 5px;
}

QPushButton:hover {
    background-color: #2980b9;
}

#chart_view {
    border: 3px solid #bdc3c7;
    border-radius: 10px;
    padding: 0;
    margin: 5px;
}